class Solution {
    public List<List<Integer>> threeSum(int[] nums) {
        Arrays.sort(nums);
        List<List<Integer>> result = new ArrayList<>();
        for(int i = 0 ; i < nums.length && nums[i]<= 0; i++){
            if(i == 0 || nums[i-1] != nums[i]){
             twosum(nums, i, result);   
            }
        }
        return result;
    }
    public void twosum(int[] nums, int index, List<List<Integer>>result){
        int left = index+1;
        int right = nums.length-1;
        while(left < right){
           int sum = nums[left]+nums[right]+ nums[index];
            if(sum < 0 || (left > index+1 && nums[left] == nums[left-1])){
                left++;
            }else if(sum > 0 ||(right < nums.length-1 && nums[right] == nums[right+1])){
                right--;
            }else{
                List<Integer>list = new ArrayList<>();
                list.add(nums[index]);
                list.add(nums[left]);
                list.add(nums[right]);
                left++;
                right--;
                result.add(list);
            }
        }
    }
}
